{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} - Flickr {% endblock %}

{% block body %}

    {% block divForm %}
        <form method="GET" action="">
            <div class="form-group">
                <label for="search">Recherche: </label>
            <input type="search" class="form-control" placeholder="Votre recherche" name="search">
            </div>
            <div class="form-group">
                <label for="results">Nombre d'images:</label>
            <select name="results" class="form-control">
                <option value="10">10</option>
                <option value="20">20</option>
                <option value="30">30</option>
                <option value="40">40</option>
                <option value="50">50</option>
            </select>
            </div>
            <div class="form-group">
                <label for="radio">Cat√©gorie d'images:</label>
                Photos <input type="radio" name="choice" value="1" checked>
                Captures <input type="radio" name="choice" value="2" >
                Autres <input type="radio" name="choice" value="3">
            </div>
            <input type="submit" class="btn btn-info">
        </form>
    </div>
    {% endblock %}
    {% block divImg %}
{% if photo_array is defined %}
    <div class="container">
        {% for photo in photo_array %}
            <img src="{{ photo }}" class="img-thumbnail img-responsive">
        {% endfor %}
    </div>
{% endif %}
{% endblock %}


{% endblock %}
